<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_serv"
    android:layout_height="match_parent"
    tools:context=".AgentCustomerDetail">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar"
        android:layout_alignParentTop="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Customer Detail"
                    android:id="@+id/tv_name"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#fff"
                    android:layout_gravity="start"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:padding="5dp"
                app:civ_border_color="@color/white"
                android:src="@drawable/avtar"
                app:civ_border_width="1dp" />

            <ImageView
                android:id="@+id/edit"
                android:enabled="false"
                android:background="@color/transparent"
                android:clickable="false"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="-10dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:tint="@color/white"
                android:src="@drawable/ic_mode_edit_black_24dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingLeft="20dp"
                    android:text="Name"/>
                <TextView
                    android:id="@+id/name"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="20dp"
                    android:text="Harshit Keshari"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:text="Email"/>
                <TextView
                    android:id="@+id/email"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:text="Harshit@gmail.com"/>

            </LinearLayout>

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Detail"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:drawableLeft="@drawable/icon_person"
            android:drawableTint="@color/colorPrimaryDarkk"
            android:drawablePadding="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDarkk"
            android:textStyle="bold"
            />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="10"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginBottom="0dp"
                />
            <TextView
                android:id="@+id/phone"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="normal"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="10"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginBottom="0dp"/>
            <TextView
                android:id="@+id/gender"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:hint="Male"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="normal"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="10"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="Birthday"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginBottom="0dp"/>
            <TextView
                android:id="@+id/dob"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:hint="Dob"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="normal"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="10"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="M. Status"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginBottom="0dp"/>
            <TextView
                android:id="@+id/status"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:hint="m.status"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="normal"/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/anniversary_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="10"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"                android:layout_height="wrap_content"
                android:text="Anniversary"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginBottom="0dp"/>
            <TextView
                android:id="@+id/anni"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:hint="Anniversary"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_weight="7"                android:textColor="@color/black"
                android:textStyle="normal"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="10"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Family"
                android:layout_weight="3"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginBottom="0dp"/>
            <TextView
                android:id="@+id/totalfamily"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Family"
                android:textSize="15dp"
                android:layout_weight="7"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="normal"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="10"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="State"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginBottom="0dp"/>
            <TextView
                android:id="@+id/state"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="state"
                android:layout_weight="7"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="normal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="10"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="Area"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginBottom="0dp"/>
            <TextView
                android:id="@+id/area"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Area"
                android:layout_weight="7"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="normal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="10"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="Landmark"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginBottom="0dp"/>
            <TextView
                android:id="@+id/landmark"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="LandMark"
                android:textSize="15dp"
                android:layout_weight="7"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="normal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:weightSum="10"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="Pincode"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:layout_marginBottom="0dp"/>
            <TextView
                android:id="@+id/pincode"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Pincode"
                android:layout_weight="7"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="normal"/>

        </LinearLayout>



        <!--   *********     End of Personal Detail    ************   -->





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plan Detail"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_privacy_in_not_black_24dp"
                android:drawablePadding="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:drawableTint="@color/colorPrimaryDarkk"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimaryDarkk"
                android:textStyle="bold"
                />

        <TextView
            android:id="@+id/totalplan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 "
            android:textSize="15dp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        </LinearLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_customer_plan_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

