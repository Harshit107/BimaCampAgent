<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_marginBottom="1dp"
    android:layout_marginTop="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"

        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/reciver_message"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/_30sdp"
        android:textIsSelectable="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/reciver_name"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/message_profile_image"
        android:layout_toRightOf="@id/message_profile_image"
        android:background="@drawable/reciver_message_layout"
        android:padding="10dp"
        android:text="Reciver message here"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/reciver_time"
        android:layout_width="wrap_content"
        android:textIsSelectable="true"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:layout_below="@id/reciver_message"
        android:layout_toEndOf="@id/message_profile_image"
        android:layout_toRightOf="@id/message_profile_image"
        android:padding="10dp"
        android:text="Reciver time"
        android:textColor="#000000"
        android:textSize="12dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/reciver_name"
        android:layout_width="wrap_content"
        android:textIsSelectable="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/message_profile_image"
        android:layout_toRightOf="@id/message_profile_image"
        android:text="Reciver name"
        android:textColor="#FC0404"
        android:textSize="16dp"
        android:textStyle="bold" />



    <ImageView

        android:id="@+id/message_reciver_picture"
        android:layout_width="150dp"
        android:layout_marginRight="@dimen/_70sdp"
        android:layout_height="150dp"
        android:visibility="gone"
        android:layout_below="@id/reciver_name"
        android:layout_toEndOf="@id/message_profile_image"
        android:layout_toRightOf="@id/message_profile_image" />
    <TextView
        android:id="@+id/reciver_image_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:visibility="gone"
        android:layout_below="@id/message_reciver_picture"
        android:layout_toEndOf="@id/message_profile_image"
        android:layout_toRightOf="@id/message_profile_image"
        android:text="Reciver time"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textStyle="bold" />




</RelativeLayout>
